	if (IrReceiver.decode()) {
	IrReceiver.resume();
	value = IrReceiver.decodedIRData.command;
	Serial.println(value);  
      if(value==btn3){
        if (!fuschiaPin){
        	fuschia();
        	fuschiaPin=true;}
        else if(fuschiaPin){
          	ledOff();
          	fuschiaPin= false;}
        } 
      else if (value==btn1){
        ledOff();
        menu=2;
      	Serial.println("Green selected");}
      else if (value==btn2){
        ledOff();
        menu=3;
      	Serial.println("Red selected");}
             else if(value==btn4){
        ledOff();
    	menu=5;
    	Serial.println("blue and white selected");
  		}
  	  else if(value==btn5){
    	ledOff();
   	 	menu=6;
    	Serial.println("turquoise selected");
  }
      else if(value==btn6){
      	ledOff();
