}
  
  while(menu==5){
    if(digitalRead(forbiddenButton)==HIGH){
    cops=!cops;
    siren();}
    
	if (IrReceiver.decode()) {
	IrReceiver.resume();
	value = IrReceiver.decodedIRData.command;
	Serial.println(value);
      //blue and white will continue to flash until the while loop
      //is broken
      if(value==btn4){
        if (!blueWhite){
          blueWhite=true;
          while(blueWhite){
        	blue();
          	delay(500);
            white();
            delay(500);      
     if (IrReceiver.decode()) {
			IrReceiver.resume();
			value = IrReceiver.decodedIRData.command;
			Serial.println(value);  
     if(value==btn4){
          	ledOff();
           blueWhite=false;
        	break;}   
     else if (value==btn1){
        ledOff();
        menu=2;
      	Serial.println("Green selected");
        break;}
      else if (value==btn3){
        ledOff();
        menu=4;
      	Serial.println("Fuschia selected");
      	break;}
  	  else if(value==btn5){
    	ledOff();
   	 	menu=6;
    	Serial.println("turquoise selected");
        break;
