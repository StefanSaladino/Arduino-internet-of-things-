while(menu==7){
  if(digitalRead(forbiddenButton)==HIGH){
    cops=!cops;
    siren();}
	if (IrReceiver.decode()) {
	IrReceiver.resume();
	value = IrReceiver.decodedIRData.command;
	Serial.println(value);   
	if(value==btn6){
        if (!randomPin){
        	randomColour();
        	randomPin=true;}
        else if(randomPin){
          	ledOff();
          	randomPin= false;}
